{
  "name": "server",
  "version": "1.0.0",
  "description": "server code for mentor labs",
  "main": "server/main.ts",
  "license": "MIT",
  "engines": {
    "node": "16.13.0",
    "yarn": "1.22.17"
  },
  "scripts": {
    "start:prod": "cross-env NODE_ENV=production node prod/main.js",
    "dev": "concurrently \"yarn server:dev\" \"yarn client:dev\"",
    "client:dev": "cd client && yarn start",
    "server:dev": "cross-env NODE_ENV=development nodemon server/main.ts",
    "client:install": "yarn --cwd ./client install",
    "server:build": "tsc -p tsconfig.prod.json",
    "client:build": "yarn --cwd ./client build && yarn client:move-build",
    "client:move-build": "ts-node utils/move-from-to.ts client/build prod/client",
    "lint": "eslint server/**/*.ts",
    "lint:fix": "eslint server/**/*.ts --fix",
    "format": "prettier --write \"server/**/*.{ts,tsx,js,jsx}\" \"client/**/*.{ts,tsx,js,jsx}\"",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage",
    "dotenv-types:gen": "npx gen-env-types .env -o server/common/types/env.d.ts -e .",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "heroku-prebuild": "cd client && yarn install --dev",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn run server:build && yarn run client:install && yarn run client:build"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/fs-extra": "^9.0.13",
    "@types/gravatar": "^1.8.2",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^15.6.2",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.27.0",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "danfojs-node": "^0.3.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "gravatar": "^1.8.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "normalize-url": "^6.1.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.2.0",
    "twilio": "^3.69.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.34",
    "typeorm-naming-strategies": "^2.0.0",
    "typeorm-typedi-extensions": "^0.4.1"
  },
  "lint-staged": {
    "client/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn format"
    ],
    "server/**/*.{js,ts}": [
      "yarn format"
    ]
  }
}
